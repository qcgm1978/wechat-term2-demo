.container {
  display: flex;
  flex-direction: column;
}

.title {
  font-family: PingFang-SC-Semibold, 'Source Han Sans CN Bold', 'Noto Sans CJK SC Bold';
  color: rgb(85, 85, 85);
  font-size: 36rpx;
  margin-top: 55rpx;
  margin-bottom: 58rpx;
  align-self: center;
}

.up-input {
  display: flex;
  flex-direction: column;
  position: relative;
}

.input-image {
  width: 650rpx;
  height: 88rpx;
  align-self: center;
  margin-bottom: 32rpx;
}

.up-input-content {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 0;
  left: 0;
  margin-top: 18rpx;
  margin-left: 30rpx;
}

.ic-phone-image {
  width: 28rpx;
  height: 40rpx;
  align-self: center;
}

.ic-key-image {
  width: 42rpx;
  height: 40rpx;
  align-self: center;
}

.phone-input {
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  color: rgb(85, 85, 85);
  font-size: 34rpx;
}

.key-input {
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  color: rgb(85, 85, 85);
  font-size: 36rpx;
}

.button-verify-normal {
  position: absolute;
  margin-top: 0rpx;
  margin-right: 0rpx;
  width: 180rpx;
  height: 66rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.reminder {
  font-family: PingFang-SC-Regular, 'Source Han Sans CN Regular', 'Noto Sans CJK SC Regular';
  color: rgb(235, 97, 15);
  font-size: 24rpx;
  margin: 0 140rpx;
}

.login-image {
  margin-top: 24rpx;
  align-self: center;
  width: 650rpx;
  height: 88rpx;
}

.button-title {
  font-family: PingFang-SC-Medium, 'Source Han Sans CN Medium', 'Noto Sans CJK SC Medium';
  color: rgb(255, 255, 255);
  margin-top: 12rpx;
  font-size: 36rpx;
  align-self: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.send-verify-text {
  text-align: center;
  width: 160rpx;
  position: absolute;
  color: #fff;
  font-size: 30rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.verify-button-area {
  position: absolute;
  right: 140rpx;
  top: 30rpx;
  z-index: 10;
}
