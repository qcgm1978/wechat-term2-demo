<view class='column category-left'>
  <block wx:for='{{data}}' wx:key='{{index}}'>
    <view class='{{(currentIndex===index)?"bgc":""}}' style='padding:22rpx 0;' catch:tap='toggleFirst' data-index="{{index}}">
      <text class='regular category-first center-center {{(currentIndex===index)?"current":""}}'>{{item.first}}</text>
    </view>
    <view class='column' hidden='{{!(index===currentIndex)}}' class='category-right bgc padding'>
      <view wx:for='{{item.val}}' wx:key='{{index}}' wx:for-item='second' class='second-container'>
        <text class='medium category-second'>{{second.second}}</text>
        <view class='center category-third padding' style="padding-left: 0;">
          <view wx:for="{{second.val}}" wx:for-item='third' wx:key='{{index}}' class='column category-third'>
            <image src='{{third.val}}' mode='aspectFit'></image>
            <text class='category-name'>{{third.third}}</text>
          </view>
        </view>
        <view class='line'></view>
      </view>
    </view>
  </block>
</view>