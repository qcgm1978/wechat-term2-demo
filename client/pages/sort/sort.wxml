<view class='column category-left'>
  <block wx:for='{{data}}' wx:key='{{index}}'>
    <text class='regular category-first center-center' >{{item.first}}</text>
    <view class='column' hidden='{{index}}' class='category-right bgc padding'>
      <view wx:for='{{item.val}}' wx:for-item='second' class='second-container'>
        <text class='medium category-second'>{{second.second}}</text>
        <view class='center category-third padding'>
          <view wx:for="{{second.val}}" wx:for-item='third' class='column category-third'>
            <image src='{{third.val}}' mode='aspectFit'></image>
            <text>{{third.third}}</text>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>