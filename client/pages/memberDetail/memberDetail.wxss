.container-detail {
  height: 920rpx;
  background-color: #fff;
  margin: 100rpx auto;
  width: 670rpx;
  border-radius: 20rpx;
}

.profile {
  width: 200rpx;
  height: 200rpx;
  transform: translate(0, -50%);
  background-color: rgb(240, 240, 240);
  border-radius: 50%;
}

.profile image {
  width: 100rpx;
  height: 100rpx;
}
.profile-name{
  position:relative;top:-80rpx;
  font-size: 32rpx;
  color: rgb(235,97,18);
}
.name {
  font-size: 30rpx;
}

.name-txt {
  font-size: 26rpx;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  margin: 16rpx;
}

.row {
  height: 183rpx;
  align-items: center;
}
