.tab {
  width: 100%;
  font-size: 30rpx;
  height: 175rpx;
  background-color: rgb(255, 255, 255);
  line-height: 80rpx;
  justify-content: space-around;
  margin-top: 30rpx;
}

.tab view {
  justify-content: center;
}

.tab image {
  width: 44rpx;
  height: 43rpx;
}

.tab text {
  line-height: 100%;
  margin-top: 20rpx;
  color: rgb(119, 119, 119);
}

.promotion-container {
  align-items: center;
}

.container-detail {
  background-color: #fff;
  margin: 0 auto 190rpx;
  padding-left: 39rpx;
}



.profile {
  width: 200rpx;
  height: 200rpx;
  transform: translate(0, -50%);
  background-color: rgb(240, 240, 240);
  border-radius: 50%;
}

