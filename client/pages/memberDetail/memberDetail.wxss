.my-container {
  padding:24rpx;
  align-items: left;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  margin: 16rpx;
}

.my-item-name {
  font-size: 28rpx;
  color: #333;
}

.my-item-val {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #707070;
}

.my-category-container {
  justify-content: space-between;
  width: 100%;
  align-items: center;
}

.my-category-name {
  font-size: 32rpx;
  color: #333;
}

.my-category-val {
  font-size: 24rpx;
  color: #999;
}

.tab {
  width: 100%;
  font-size: 30rpx;
  /* height: 175rpx; */
  background-color: rgb(255, 255, 255);
  /* line-height: 80rpx; */
  justify-content: space-around;
}

.tab > view {
  justify-content: center;
  width: 25%;
}

.member-icon {
  background: #ee711f;
  font-size: 22rpx;
  color: #fff;
  width: 28rpx;
  height: 28rpx;
  
}

.tab image {
  width: 44rpx;
  height: 43rpx;
}

.tab text {
  line-height: 100%;
  margin-top: 18rpx;
  color: rgb(119, 119, 119);
  font-size: 26rpx;
}

.promotion-container {
  align-items: center;
}

.container-detail {
  background-color: #fff;
  /* margin: 0 auto 190rpx; */
  padding-left: 39rpx;
}

.profile {
  width: 200rpx;
  height: 200rpx;
  transform: translate(0, -50%);
  background-color: rgb(240, 240, 240);
  border-radius: 50%;
}

/* .profile image {
  width: 100rpx;
  height: 100rpx;
} */

.profile-name {
  position: relative;
  top: -80rpx;
  font-size: 32rpx;
  color: rgb(235, 97, 18);
}

.name {
  font-size: 32rpx;
  color: rgb(85, 85, 85);
  width: 100%;
  text-align: left;
}

.name-txt {
  font-size: 26rpx;
  color: rgb(144, 144, 144);
  width: 100%;
  text-align: left;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  margin: auto 22rpx auto 16rpx;
}

.row {
  height: 120rpx;
  align-items: center;
}

.short-line {
  width: 82rpx;
  height: 2rpx;
  background: rgb(51, 51, 51);
}

.promtion-call {
  width: 40rpx;
  height: 40rpx;
}

.promotion-man {
  font-size: 30rpx;
  color: rgb(237, 112, 37);
  margin: 0 39rpx 0 10rpx;
}

.my-exit {
  margin: 72rpx auto;
  font-size: 32rpx;
  color: #eb6212;
  text-align:center;
}

.dot {
  /* transform:translate(0,-6rpx); */
  margin: 12rpx 9rpx auto;
}
