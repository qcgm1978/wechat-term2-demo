<view>
  <view class='tab medium center' bindtap='toggleTab'>
    <view class='column' data-type='0'>
      <image src='./img/all.png' ></image>
      <text class='{{tabColors[0]}} regular' >全部</text>
    </view>
    <view class='column' data-type='1'>
      <image src='./img/waiting.png' ></image>
      <text class='{{tabColors[1]}} regular' >待发货</text>
    </view>
    <view class='column' data-type='2'>
      <image src='./img/shipping.png'></image>
      <text class='{{tabColors[2]}} regular'>已发货</text>
    </view>
    <view class='column' data-type='3'>
      <image src='./img/complete.png'></image>
      <text class='{{tabColors[3]}} regular' >已完成</text>
    </view>
    <view class='column' data-type='4'>
      <image src='./img/return.png'></image>
      <text class='{{tabColors[4]}} regular'>拒收单</text>
    </view>

  </view>
  <view class='center-center regular' style="height: 80rpx;font-size:28rpx;color:rgb(51, 51, 51);padding:14rpx 0 0;">
    <view class='short-line'></view>
    <text class='dot'>.</text>店铺信息
    <text class='dot'>.</text>
    <view class='short-line'></view>
  </view>
  <view class='column container-detail'>
    <view class='row center' style="width: 100%;">
      <image src='./img/shop.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>店铺名称</text>
        <text class='name-txt'>{{name}}</text>
      </view>
    </view>
    <view class='line'></view>
    <view class='row center' style="width: 100%;">
      <image src='./img/address.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>店铺地址</text>
        <text class='name-txt'>{{address}}</text>
      </view>
    </view>
    <view class='line'></view>
    <view class='row center' style="width: 100%;">
      <image src='./img/shopkeeper.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>店主姓名</text>
        <text class='name-txt'>{{profileName}}</text>
      </view>
    </view>
    <view class='line'></view>
    <view class='row center' style="width: 100%;">
      <image src='./img/id.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>门店ID</text>
        <text class='name-txt'>{{id}}</text>
      </view>
    </view>
  </view>
  <view wx:if='{{salesmanName || salesmanCellPhone}}' class='center-center regular' style="height: 80rpx;font-size:28rpx;color:rgb(51, 51, 51);padding:14rpx 0 0;">
    <view class='short-line'></view>
    <text class='dot'>.</text>访销员信息
    <text class='dot'>.</text>
    <view class='short-line'></view>
  </view>
  <view class='column container-detail'>
    <view wx:if='{{salesmanName}}' class='row center' style="width: 100%;">
      <image src='./img/shopkeeper.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>访销员名称</text>
        <text class='name-txt'>{{salesmanName}}</text>
      </view>
    </view>
    <view class='line'></view>
    <view wx:if='{{salesmanCellPhone}}' class='row center' style="width: 100%;">
      <image src='./img/promotion_phone.png' class='icon'></image>
      <view class='column regular' style="align-items: left;">
        <text class='name'>访销员电话</text>
        <text class='name-txt'>{{salesmanCellPhone}}</text>
      </view>
      <view class='center' style="justify-content: flex-end;flex-grow: 1;" catch:tap='call'>
        <image src='./img/promotion_call.png' class='promtion-call'></image>
        <text class='promotion-man regular'>联系访销员</text>
      </view>
    </view>
  </view>
  <view class='bgc exit ' catch:tap='exitLogin' hover-class='btn-hover'>退出登录</view>
</view>