<!--pages/detail/detail.wxml-->
<view class='product-card'>
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='bgc' style="height: 750rpx;">
    <block wx:for="{{imgUrls}}" wx:key='{{index}}'>
      <swiper-item style='display:flex; height:100%;'>
        <image bind:tap='preview' data-src="{{item}}" src="{{item}}" class="slide-image" style="height:100%;;margin:0 auto;" />
      </swiper-item>
    </block>
  </swiper>
<view >
  <view class='padding medium bgc'>
    <view class='product-price'>￥{{product.price}}</view>
    <view class='product-name'>{{product.name}}</view>
  </view>
  <!-- <view class='line'></view> -->
  <view class='center promotion-container padding regular bgc mgt'>
    <text class='promotion'style="align-self: start;">促销</text>
    <view class='promotion-list'>
      <view class='center' wx:for='{{promotions}}' wx:key='index' wx:if='{{index<3}}' style="height: 36rpx;">
        <text class='promotion-type'>{{item.type}}</text>
        <text class='ellipse' style='width:490rpx;'>{{item.content}}</text>
      </view>
    </view>
    <image src='../memberDetail/img/arrow.png' class='order-arrow1'></image>
  </view>
  <view class='center promotion-container padding regular bgc' style='margin-top:15rpx;'>
    <text class='promotion'style="align-self: start;">类别</text>
    <view class='promotion-list' >
      <view class='center'style="height: 36rpx;">
        <text class='ellipse' style='width:490rpx;'>{{type}}</text>
        <text class='promotion-type'></text>
      </view>
    </view>
    <view></view>
    <!-- <image src='../memberDetail/img/arrow.png' class='order-arrow1'></image> -->
  </view>
  <view class='center promotion-container padding regular bgc mgt'>
    <text class='promotion' style="align-self: start;">信息</text>
    <view class='promotion-list' >
      <view class='center'>
        <text style='width:490rpx;'>{{info}}</text>
        <text class='promotion-type'></text>
      </view>
    </view>
    <view></view>
  </view>
   <view class='center promotion-container padding regular bgc mgt'>
    <text class='promotion' style="align-self: start;">介绍</text>
    <view class='promotion-list' >
      <view class='center'>
        <text style='width:490rpx;'>{{intro}}</text>
        <text class='promotion-type'></text>
      </view>
    </view>
    <view></view>
  </view>
</view>
  <!-- <image class='product-image' src='{{product.image}}'></image> -->
  <view class='product-source'>{{product.source}}</view>
  <view class='product-meta'>
    <view class='product-money'>￥</view>

  </view>
</view>
<view class='info-card'>
  <view class='advantage-list'>
    <view class='advantage-item'>
      <image class='advantage-icon' src='/images/check-yellow.png'></image>
      <view class='advantage-text'>7天免费退货</view>
    </view>
    <view class='advantage-item'>
      <image class='advantage-icon' src='/images/check-yellow.png'></image>
      <view class='advantage-text'>24小时内发货并配送运费险</view>
    </view>
  </view>
  <view class='comment-entry' bindtap='onTapCommentEntry'>
    <view class='comment-btn'>
      <view class='comment-title'>已买评价</view>
      <view class='comment-count'>{{product.commentCount}}条</view>
      <image class='comment-arrow' src='/images/grey-arrow.png'></image>
    </view>
    <view class='comment-preview'>{{product.firstComment.content}}</view>
  </view>
</view>
<view class='opr-cnt'>
  <view class='opr-trolley' bindtap='addToTrolley'>加入购物车</view>
  <view class='opr-buy' bindtap='buy'>立即购买</view>
</view>