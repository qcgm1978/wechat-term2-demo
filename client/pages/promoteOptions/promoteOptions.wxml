<view class="promote-msg" style='background-color: #ffffff'>
{{promoteMsg}}
</view>
<view class='line'></view>
<view wx:for='{{product}}' wx:key='*this' class='center padding bgc mgt' data-itemid='{{item.itemId}}'>
  <radio catch:tap='radioClick' class="radio" data-index='{{index}}' data-itemid='{{item.itemId}}' value="{{index}}" checked="{{item.checked}}"  color='{{item.checked?"#EE711F":"#D1D1D2"}}' style='transform:scale(.8); display: flex; align-items: center;'>
        </radio>
  <image src='{{item.itemImageAddress1 }}' mode='aspectFit'></image>
  <view class='column regular list-container'>
    <text class='list-name'>{{item.itemName}}</text>
    <text class='list-spec'>规格：  {{item.itemSpecification}}</text>
    <text class='dollar medium list-price'>{{item.price}}</text>
  </view>

</view>

  <view class='bgc center btns regular padding-vertical-10  mgt btn-container fixed-position' >
    <view class='center-center' style='justify-content:left; margin-right: 20rpx;'>
      <image src='{{imgTrolly}}' class='promotion-icon' style='width:54rpx;height:54rpx;'></image>
      <view class='foot-txt1'>套装价</view>
      <view class='foot-txt2'>¥3313.2</view>
      <!-- <view class='foot-txt3'>已省28.8元</view> -->
    </view>
    <button bindtap='addToTrolley' class="without-back-image">加入进货单</button>
  </view>
<view class='promote-container' wx:if="{{showPromoteDetail}}">
  <view style='display: flex; '>
    <view class='' style='display: flex; align-items: center;margin: 10rpx;'>搭配商品</view>
    <view wx:for='{{promotionItems}}'>
      <image style='width: 120rpx; height: 120rpx; border: 2rpx; margin: 10rpx;' src='{{item}}'></image>
    </view>
  </view>
  <image class='promote-arrow' src='{{rightArrow}}' bindtap='togglePromoteDetail'></image>
</view>
<view class='promote-container-detail' wx:else>

  <view style='display: flex;   justify-content: space-between; align-items:center;'>
    <view class='' style='display: flex; align-items: center;margin: 10rpx;'>搭配商品</view>
    <image class='promote-arrow' src='{{rightArrow}}' bindtap='togglePromoteDetail'></image>
  </view>

  <view  style='display: flex; flex-direction: row; font-size:30rpx; '>
    <view wx:for='{{promotionItems}}'>
      <view style='width: 150rpx; height:auto; padding:10rpx;border:2rpx solid #949494; margin: 10rpx;'>
        <image style='width: 120rpx; height: 120rpx; border: 2rpx; margin: 10rpx;' src='{{item}}'></image>
        <view style='background-color:grey; border-radius:10rpx; font-size:30rpx; width: auto; display:inline-block !important; display:inline;'>¥90</view>
        <view style='display: flex; '>
          <view style=''>芬达21LL</view>
          <view style=''>x2</view>
        </view>
      </view>
    </view>
  </view>

</view>