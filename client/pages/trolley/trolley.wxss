.trolley-opacity {
  opacity: 0.3;
}

.trolley-not-buy {
  font-size: 24rpx;
  color: #707070;
}

.trolley-invalid-del {
  transform: translate(0, 85rpx);
}

.trolley-container {
  align-items: center;
  height: 256rpx;
}

.trolley-right {
  /* margin-left: 50rpx; */
  flex-flow: 1;
  flex-grow: 1;
  align-items: flex-start;
  margin-left: 16rpx;
}

.trolley-middle {
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 3rpx;
}

.del {
  width: 48rpx;
  height: 48rpx;
}

.goods-img {
  width: 208rpx;
  height: 208rpx;
}

.trolley-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.trolley-spec {
  font-size: 24rpx;
  color: #949494;
  width: 300rpx;
}

.trolley-price {
  font-size: 28rpx;
  color: #ee711f;
}

.trolley-bottom {
  margin-top: 46rpx;
  justify-content: space-between;
  width: 100%;
}

.plus-minus {
  width: 40rpx;
  height: 40rpx;
  /* border: 1px solid rgb(236, 236, 236); *//* display: inline-block; *//* font-size: 26rpx; */
  color: #666;
}

.trolley-total {
  width: 100%;
  /* height: 15%; */
  position: fixed;
  bottom: 0;
}

.trolley-calc {
  justify-content: space-between;
  /* background: rgba(253, 182, 88, 0.9); */
  font-size: 26rpx;
  color: #EC6515;
  background: rgb(254, 252, 247);
  border-radius: 4rpx;
}

.trolley-confirm {
  font-size: 26rpx;
  color: #666;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding-right: 15rpx;
  /* height:80%; */
}

.trolley-num {
  font-size: 36rpx;
  color: rgb(235, 92, 32);
}

.trolley-btn {
  background: #acafb3;
  border-radius: 4rpx;
  width: 236rpx;
  height: 68rpx;
  font-size: 32rpx;
  color: #fff;
  padding: 0;
  margin: 0;
}

.trolley-btn.enable {
  background-image: linear-gradient(90deg, #eb6112 0%, #febb5c 100%);
}

.trolley-arrow {
  width: 26rpx;
  height: 26rpx;
  /* margin-left: 10rpx; */
}

page {
  height: 100%;
}

.trolley-empty {
  height: 100%;
}

.trolley-empty image {
  width: 280rpx;
  height: 208rpx;
}

.trolley-empty text {
  font-size: 32rpx;
  color: #9a9c9b;
  margin: 66rpx auto;
}

.trolley-empty button {
  background-image: linear-gradient(90deg, #febb5c 0%, #eb6112 100%);
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #fff;
  width: 280rpx;
  height: 80rpx;
}

.promotion {
  width: 100%;
  background: white;
  margin-bottom: 16rpx;
}

.promotion-1 {
  display: inline-block;
  width: 72rpx;
  border-radius: 10rpx;
  text-align: center;
  color: white;
  background-color: #ee711f;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
  height: 35rpx;
}

.promotion-2 {
  /* display: inline-block;
  width: 400rpx; */
  color: #b1afad;
  font-size: 24rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
}

.promotion-2-bottom {
  display: inline-block;
  width: auto;
  color: #b1afad;
  font-size: 24rpx;
  margin-left: 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.promotion-3 {
  width: auto;
  color: #f5b87a;
  font-size: 24rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.select-goods {
  height: 750rpx;
  position: fixed;
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.close-popup {
  width: 48rpx;
  height: 48rpx;
}

.sales-unit {
  font-size: 24rpx;
  letter-spacing: 0;
  line-height: 44rpx;
}

.radio {
  transform: scale(0.6);
  margin: auto 8rpx 92rpx;
}
