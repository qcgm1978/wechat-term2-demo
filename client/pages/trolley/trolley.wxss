.trolley-container {
  align-items: center;
  margin-bottom: 16rpx;
}

.trolley-right {
  margin-left: 50rpx;
  flex-flow: 1;
  flex-grow: 1;
  align-items: left;
}

.trolley-middle {
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 16rpx;
}

.del {
  width: 48rpx;
  height: 48rpx;
}

.goods-img {
  max-width: 208rpx;
  height: 208rpx;
}

.trolley-name {
  font-size: 26rpx;
  color: #333;
}

.trolley-spec {
  font-size: 24rpx;
  color: #949494;
}

.trolley-price {
  font-size: 28rpx;
  color: #ee711f;
}

.trolley-bottom {
  margin-top: 46rpx;
  justify-content: space-between;
  width: 100%;
}

.plus-minus {
  width: 60rpx;
  height: 40rpx;
  border: 1px solid rgb(236, 236, 236);
  /* display: inline-block; *//* font-size: 26rpx; */
  color: #666;
}

.trolley-total {
  position: absolute;
  top: 100%;
  transform: translate(0, -100%);
  width: 100%;
}

.trolley-calc {
  justify-content: space-between;
  background: rgba(253, 182, 88, 0.98);
  font-size: 28rpx;
  color: #fff;
}

.trolley-confirm {
  font-size: 26rpx;
  color: #666;
  justify-content: space-between;
  align-items: center;
}

.trolley-num {
  font-size: 36rpx;
  color: rgb(235, 92, 32);
}

.trolley-btn {
  background: #acafb3;
  border-radius: 4rpx;
  width: 236rpx;
  height: 68rpx;
  font-size: 32rpx;
  color: #fff;
  padding: 0;
  margin: 0;
}
.trolley-btn.enable{
  background-image:linear-gradient(90deg, #febb5c 0%, #eb6112 100%);

}