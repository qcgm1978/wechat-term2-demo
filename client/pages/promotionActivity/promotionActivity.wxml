<import src="../../template/select-present.wxml" />
<block wx:for='{{promotions}}' wx:key='index'>
  <view class='center a-i-c container-activity'>
    <image class='presentImg' src='{{item.promotionType=="2"?imgManjian:imgManzeng}}'></image>
    <text class='name'>{{item.promotionName}}</text>
    <text class='detail' wx:if='{{item.promotionType=="2"}}'>可省{{item.discountAmount}}元</text>
    <view catch:tap='selectGift' wx:else class='center a-i-c' data-index='{{index}}'>
      <text class='detail'>更换赠品</text>
      <image src='../trolley/img/arrow.png' class='arrow'></image>
    </view>
  </view>
  <scroll-view scroll-x wx:if='{{item.promotionType!=="2"}}' class='center a-i-c container-activity'>
    <image wx:for='{{item.giftItems}}' wx:key='index' src='{{item.itemImageAddress1}}' class='img' mode='aspectFit'></image>
  </scroll-view>
  <view class='line'></view>
</block>
<template is="gift" data="{{isSelectingGift,radioChange,giftItems}}" />
