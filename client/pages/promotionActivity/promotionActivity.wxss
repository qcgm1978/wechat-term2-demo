@import '../../template/select-gift.wxss';
@import '../../template/list.wxss';

.name {
  font-size: 26rpx;
  color: #333;
  letter-spacing: 0;
  margin-right: auto;
}

.detail {
  font-size: 26rpx;
  color: #ec6515;
  letter-spacing: 0;
}

.arrow {
  width: 28rpx;
  height: 28rpx;
}

.img {
  width: 180rpx;
  min-width: 180rpx;
  max-height: 180rpx;
  border: 2rpx solid #f0f1f5;
  border-radius: 2rpx;
  margin-left: 8rpx;
}

.container-activity {
  padding: 24rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.line {
  height: 16rpx;
}

.thumbnail {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  text-align: center;
  border: 1px solid rgb(236, 236, 236);
}
