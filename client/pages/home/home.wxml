<view class='product-row' wx:for='{{productList}}' wx:key='id' wx:if='{{index%3 === 1}}'>
  <navigator class='product-card' wx:for='{{[productList[index], productList[index+1],productList[index+2]]}}' wx:key='id' wx:for-index='pindex' wx:for-item='pitem' url="/pages/detail/detail?id={{pitem.id}}">
    <image class='product-image' src='{{pitem.image}}' mode='scaleToFill'></image>
